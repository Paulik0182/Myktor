<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clAddressRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/muted_white">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar_counterparty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="72dp"
        android:fillViewport="true"
        android:paddingHorizontal="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cbIsMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Основной адрес"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCountry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cbIsMain">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Страна" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutCountry">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Город" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.nayya.uicomponents.CustomCardActionView
                android:id="@+id/ccavPostalCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:descriptionText="Обязательное поле"
                app:hintText="Почтовый индекс"
                app:infoText="Почтовый индекс"
                app:inputBackground="@drawable/bg_field_gray_cell"
                app:inputEnabled="true"
                app:inputMaxLength="36"
                app:inputMaxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutCity"
                app:showDescriptionIcon="true"
                app:showDescriptionText="true"
                app:showEditIcon="false"
                app:showInfoIcon="true"
                app:showInfoText="true"
                app:showLeftIcon="false"
                app:showUnderline="false" />

            <com.nayya.uicomponents.CustomCardActionView
                android:id="@+id/ccavStreet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:descriptionText="Обязательное поле"
                app:hintText="Улица"
                app:infoText="Улица"
                app:inputBackground="@drawable/bg_field_gray_cell"
                app:inputEnabled="true"
                app:inputMaxLength="36"
                app:inputMaxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ccavPostalCode"
                app:showDescriptionIcon="true"
                app:showDescriptionText="true"
                app:showEditIcon="false"
                app:showInfoIcon="true"
                app:showInfoText="true"
                app:showLeftIcon="false"
                app:showUnderline="false" />

            <com.nayya.uicomponents.CustomCardActionView
                android:id="@+id/ccavHouseNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:descriptionText="Обязательное поле"
                app:hintText="Номер дома"
                app:infoText="Номер дома"
                app:inputBackground="@drawable/bg_field_gray_cell"
                app:inputEnabled="true"
                app:inputMaxLength="36"
                app:inputMaxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ccavStreet"
                app:showDescriptionIcon="true"
                app:showDescriptionText="true"
                app:showEditIcon="false"
                app:showInfoIcon="true"
                app:showInfoText="true"
                app:showLeftIcon="false"
                app:showUnderline="false" />

            <com.nayya.uicomponents.CustomCardActionView
                android:id="@+id/ccavLocationNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:descriptionText="Обязательное поле"
                app:hintText="Номер квартиры (локации)"
                app:infoText="Номер квартиры (локации)"
                app:inputBackground="@drawable/bg_field_gray_cell"
                app:inputEnabled="true"
                app:inputMaxLength="36"
                app:inputMaxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ccavHouseNumber"
                app:showDescriptionIcon="true"
                app:showDescriptionText="true"
                app:showEditIcon="false"
                app:showInfoIcon="true"
                app:showInfoText="true"
                app:showLeftIcon="false"
                app:showUnderline="false" />

            <com.nayya.uicomponents.CustomCardActionView
                android:id="@+id/ccavEntranceNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:descriptionText="Не обязательное поле"
                app:hintText="Номер подезда"
                app:infoText="Номер подезда"
                app:inputBackground="@drawable/bg_field_gray_cell"
                app:inputEnabled="true"
                app:inputMaxLength="36"
                app:inputMaxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ccavLocationNumber"
                app:showDescriptionIcon="true"
                app:showDescriptionText="true"
                app:showEditIcon="false"
                app:showInfoIcon="true"
                app:showInfoText="true"
                app:showLeftIcon="false"
                app:showUnderline="false" />

            <com.nayya.uicomponents.CustomCardActionView
                android:id="@+id/ccavFloor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:descriptionText="Не обязательное поле"
                app:hintText="Этаж"
                app:infoText="Этаж"
                app:inputBackground="@drawable/bg_field_gray_cell"
                app:inputEnabled="true"
                app:inputMaxLength="36"
                app:inputMaxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ccavEntranceNumber"
                app:showDescriptionIcon="true"
                app:showDescriptionText="true"
                app:showEditIcon="false"
                app:showInfoIcon="true"
                app:showInfoText="true"
                app:showLeftIcon="false"
                app:showUnderline="false" />

            <com.nayya.uicomponents.CustomCardActionView
                android:id="@+id/ccavNumberIntercom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:descriptionText="Не обязательное поле"
                app:hintText="Код домофона"
                app:infoText="Код домофона"
                app:inputBackground="@drawable/bg_field_gray_cell"
                app:inputEnabled="true"
                app:inputMaxLength="36"
                app:inputMaxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ccavFloor"
                app:showDescriptionIcon="true"
                app:showDescriptionText="true"
                app:showEditIcon="false"
                app:showInfoIcon="true"
                app:showInfoText="true"
                app:showLeftIcon="false"
                app:showUnderline="false" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnApply"
        style="@style/Widget.MyApp.Button.OutlinedGray2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:text="Сохранить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
