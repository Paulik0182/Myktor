<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutLegalEntity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible"
    android:paddingTop="0dp">

    <!-- Чекбоксы типа контрагента -->
    <LinearLayout
        android:id="@+id/llTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cbSupplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поставщик"
            android:layout_marginEnd="8dp"/>

        <CheckBox
            android:id="@+id/cbWarehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Склад"
            android:layout_marginEnd="8dp"/>

        <CheckBox
            android:id="@+id/cbCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заказчик"/>
    </LinearLayout>

    <!-- Юридические данные -->
    <EditText
        android:id="@+id/etCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название компании"/>

    <EditText
        android:id="@+id/etType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Тип компании"/>

    <EditText
        android:id="@+id/etNIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NIP"/>

    <EditText
        android:id="@+id/etKRS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="KRS"/>
</LinearLayout>
